<div class="container mt-3 jumbotron">
  <h3 class="text-primary"> Products </h3>
  <br />
  {{#if products}}
    <div>
      <table class="table table-dark">
        <tr class="text-warning">
          <th class="font-weight-bold">Title</th><th class="font-weight-bold">Price</th><th class="font-weight-bold">Thumbnail</th>
        </tr>
        {{#each products}}
          <tr>
            <td>{{title}} </td>
            <td>{{price}}</td>
            <td><img src={{thumbnail}} /></td>
          </tr>
        {{/each}}
      </table>
    </div>
  {{else}}
    <h2 class="alert alert-danger">There are no products</h2>
  {{/if}}
</div>